{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fono",
  "version": "../package.json",
  "identifier": "de.liqki.fono",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "fono",
        "title": "fono",
        "width": 200,
        "height": 300,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "decorations": false,
        "transparent": true,
        "focusable": false,
        "shadow": false,
        "url": "index.html/#/fono",
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "capabilities": ["default", "settings"],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQwODUwNTBGQzA4RURFQ0UKUldUTzNvN0FEd1dGMEVodGdjQ1VkT255L09mSTVQeDlSVGRTWVVMN2VjYkw4ekQwTzRKK3hvaVcK",
      "endpoints": [
        "https://github.com/liqki/fono/releases/latest/download/latest.json"
      ]
    }
  }
}
